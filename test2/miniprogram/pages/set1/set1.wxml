        </view>
        <view class='input-container'>
           <label>answer：</label>
           <input data-value='{{answer}}'    name ="answer" value='{{problem.answer}}'></input>
        </view>
        <view class='input-container'>
           <label>choice1:</label>
           <input data-value='{{choice1}}'    name ="choice1" value='{{problem.choice1}}'></input>
        </view>
        <view class='input-container'>
           <label>choice2:</label>
