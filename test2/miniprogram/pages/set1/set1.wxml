        </view>
        <view class='input-container'>
           <label>choice4:</label>
           <input data-value='{{choice4}}'    name ="choice4" value='{{problem.choice4}}'></input>
        </view>
        <view class='input-container'>
           <label>content:</label>
           <input data-value='{{content}}'    name ="content" value='{{problem.content}}'></input>
        </view>
        <view class='input-container'>
           <label>score:</label>
           <input data-value='{{score}}'    name ="score" value='{{problem.score}}'></input>
        </view>
        <view class='input-container'>
           <label>subject:</label>
           <input data-value='{{subject}}'    name ="subject" value='{{problem.subject}}'></input>
        </view>
        <view class='input-container'>
           <label>type:</label>
           <input data-value='{{type}}'    name ="type" value='{{problem.type}}'></input>
        </view>
      <view class='comfirm'>
           <button form-type='submit'>保存</button>
      </view>
  </form>
</view>